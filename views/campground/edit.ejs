<% include ../partials/header %>

<div class="container">
   <div class="row">
      <h1 style="text-align: center">Edit : <%= ecamp.name %></h1>
      <div style="width:30%;margin:0 auto" >
         <form action="/campgrounds/<%= ecamp._id %>/edit?_method=PUT " method="POST">
            <div class="form-group">
               <input class="form-control" value="<%= ecamp.name %>" type="text" placeholder="name" name="qname">
            </div>
            <div class="form-group">
                  <input class="form-control" value="<%= ecamp.price %>" type="Number" placeholder="Price" name="qprice" min="0.1" step="0.1">
            </div>
            
            <div class="form-group">
                  <input class="form-control" value="<%= ecamp.description %>" type="text" placeholder="Description" name="qdesc">
            </div>
            <div class="form-group">
                  <input class="form-control" value="<%= ecamp.image %>" type="text" placeholder="urls" name="qimage">
            </div>
            <div class="form-group">
               <button  class="btn btn-lg btn-primary btn-default btn-block" >submit</button>
            </div>
         </form>
      </div>
      <a href="/campgrounds" >Go Back</a>
   </div>
</div
<% include ../partials/footer %>