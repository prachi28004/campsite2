<%include ../partials/header %>



<div class="container">
  <header class="jumbotron">
   <div>
      <h1><span class="glyphicon glyphicon-tent" aria-hidden="true"></span> Welcome to Yelpcamp</h1>
      </br>
      <p>This is amazing website !!You would have ever visited</p>
      <p>
         <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
      </p>
    </div>
  </header>



<div class="row text-center" style="display:flex; flex-wrap:wrap">
    

     <% c1.forEach(function(i){%>
            <div class=" col-lg-3 col-md-6 col-sm-6 border border-light">
               <div class="thumbnail">
                   <img width="250px" height="250px" src= <%= i.image %> >
                
                   <div class="caption">
                    <h4><%= i.name%></h4>
                   </div>
                   <p>
                     <a href="/campgrounds/<%= i._id%>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
     <%});%>

</div>
   



